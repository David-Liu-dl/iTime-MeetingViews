<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/itime_round_corner_card_bg_app"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- left status bar-->
    <LinearLayout
        android:id="@+id/status_bar"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/trash" />

        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="Cancelled" />
    </LinearLayout>

    <!-- right detail block -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/itime_round_corner_card_bg_app"
        android:id="@+id/info_container"
        android:padding="10dp"
        android:paddingBottom="27dp"
        android:paddingTop="16dp"
        android:layout_toEndOf="@id/status_bar"
        android:orientation="vertical">
        <!-- title block-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/updated_time_text"
                android:textColor="@color/text_meetingtime"
                android:layout_gravity="end"
                android:textSize="11sp"
                android:gravity="end"
                android:text="5:26"/>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:id="@+id/title_text"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="@color/text_meetingtime"
            android:text="Telstra Competition Discussion"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="19sp"
            android:id="@+id/subTitle_text"
            android:textColor="@color/text_meetingtime"
            android:text="(25th May 2017)"/>
    </LinearLayout>
</RelativeLayout>